generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario        String       @id @default(uuid())
  email             String       @unique
  senha             String
  perfil            TipoPerfil
  nome_usuario      String       @unique

  // Campos pessoais
  nome              String
  cidade_endereco   String
  estado_endereco   String
  data_nascimento   DateTime
  nacionalidade     String
  telefone_contato  String
  foto              String?

  // Relações de perfis específicos
  Atleta            Atleta?
  Treinador         Treinador?
  Empresario        Empresario?
  Time              Time?
  Organizador       Organizador?

  // Relações com a rede social
  Posts             Postagem[]
  Likes             Curtida[]
  Comments          Comentario[]
  Shares            Compartilhamento[]
  SavedPosts        PostagemSalva[]
  Notificacoes      Notificacao[]
  MensagensEnviadas Mensagem[]   @relation("MensagensEnviadas")
  MensagensRecebidas Mensagem[]  @relation("MensagensRecebidas")
  ConexoesSolicitantes Conexao[] @relation("ConexoesSolicitantes")
  ConexoesSolicitadas  Conexao[] @relation("ConexoesSolicitadas")
  Competicoes       Competicao[]

  @@index([nome_usuario])
}



/////////////////////// REDE SOCIAL ///////////////////////
enum TipoPostagem {
  TEXTO
  IMAGEM
  VIDEO
  AUDIO
}

model Postagem {
  id_postagem     String        @id @default(uuid())
  id_usuario      String
  conteudo        String
  data_criacao    DateTime      @default(now())
  midia           String[]     // URLs de mídia (imagens, vídeos)
  tipo            TipoPostagem  // Enum: TEXTO, IMAGEM, VIDEO, ETC.

  // Relações
  Usuario         Usuario       @relation(fields: [id_usuario], references: [id_usuario], onDelete: Cascade)
  Likes           Curtida[]
  Comments        Comentario[]
  Shares          Compartilhamento[]
  SavedBy         PostagemSalva[]

  @@index([id_usuario])
}


model Curtida {
  id_curtida      String     @id @default(uuid())
  id_usuario      String
  id_postagem     String
  data_curtida    DateTime   @default(now())

  // Relações
  Usuario         Usuario    @relation(fields: [id_usuario], references: [id_usuario], onDelete: Cascade)
  Postagem        Postagem   @relation(fields: [id_postagem], references: [id_postagem], onDelete: Cascade)

  @@unique([id_usuario, id_postagem]) // Um usuário pode curtir uma postagem apenas uma vez
  @@index([id_postagem])
}


model Comentario {
  id_comentario    String      @id @default(uuid())
  id_usuario       String
  id_postagem      String
  conteudo         String
  data_comentario  DateTime    @default(now())
  id_comentario_pai String?    // Comentário ao qual este comentário é uma resposta (opcional)

  // Relações
  Usuario          Usuario     @relation(fields: [id_usuario], references: [id_usuario], onDelete: Cascade)
  Postagem         Postagem    @relation(fields: [id_postagem], references: [id_postagem], onDelete: Cascade)
  ComentarioPai    Comentario? @relation("Resposta", fields: [id_comentario_pai], references: [id_comentario])
  Respostas        Comentario[] @relation("Resposta") // Não especificamos `fields` ou `references` aqui

  @@index([id_postagem])
}



model Compartilhamento {
  id_compartilhamento String   @id @default(uuid())
  id_usuario          String
  id_postagem         String
  data_compartilhamento DateTime @default(now())

  // Relações
  Usuario             Usuario    @relation(fields: [id_usuario], references: [id_usuario], onDelete: Cascade)
  Postagem            Postagem   @relation(fields: [id_postagem], references: [id_postagem], onDelete: Cascade)

  @@index([id_usuario])
  @@index([id_postagem])
}


model PostagemSalva {
  id_postagem_salva String     @id @default(uuid())
  id_usuario        String
  id_postagem       String
  data_salvamento   DateTime   @default(now())

  // Relações
  Usuario           Usuario    @relation(fields: [id_usuario], references: [id_usuario], onDelete: Cascade)
  Postagem          Postagem   @relation(fields: [id_postagem], references: [id_postagem], onDelete: Cascade)

  @@unique([id_usuario, id_postagem]) // Um usuário pode salvar uma postagem apenas uma vez
  @@index([id_usuario])
}

model Notificacao {
  id_notificacao    String        @id @default(uuid())
  id_usuario        String
  tipo              TipoNotificacao
  mensagem          String
  data_notificacao  DateTime      @default(now())
  lido              Boolean       @default(false)
  referenciaId      String?       // Pode referenciar uma postagem, comentário, etc.

  // Relação
  Usuario           Usuario       @relation(fields: [id_usuario], references: [id_usuario], onDelete: Cascade)

  @@index([id_usuario])
}

enum TipoNotificacao {
  CURTIDA
  COMENTARIO
  COMPARTILHAMENTO
  SEGUIDOR
  MENSAGEM
  OUTRO
}

model Mensagem {
  id_mensagem       String        @id @default(uuid())
  id_usuario_remetente   String
  id_usuario_destinatario String
  conteudo          String
  data_mensagem     DateTime      @default(now())
  lida              Boolean       @default(false)

  // Relações
  UsuarioRemetente      Usuario   @relation("MensagensEnviadas", fields: [id_usuario_remetente], references: [id_usuario], onDelete: Cascade)
  UsuarioDestinatario   Usuario   @relation("MensagensRecebidas", fields: [id_usuario_destinatario], references: [id_usuario], onDelete: Cascade)

  @@index([id_usuario_remetente])
  @@index([id_usuario_destinatario])
}

model Conexao {
  id_conexao             String     @id @default(uuid())
  id_usuario_solicitante String
  id_usuario_solicitado  String
  status                 StatusConexao
  data_solicitacao       DateTime   @default(now())

  // Relações
  UsuarioSolicitante     Usuario    @relation("ConexoesSolicitantes", fields: [id_usuario_solicitante], references: [id_usuario], onDelete: Cascade)
  UsuarioSolicitado      Usuario    @relation("ConexoesSolicitadas", fields: [id_usuario_solicitado], references: [id_usuario], onDelete: Cascade)

  @@unique([id_usuario_solicitante, id_usuario_solicitado])
  @@index([id_usuario_solicitante])
  @@index([id_usuario_solicitado])
}

enum StatusConexao {
  PENDENTE
  ACEITA
  RECUSADA
  BLOQUEADA
}


/////////////////////// PERFIS ///////////////////////
enum TipoPerfil {
  ATLETA
  TREINADOR
  ORGANIZADOR
  TIME
  EMPRESARIO
}
enum Categoria {
  PROFISSIONAL
  AMADOR
  JUVENIL
  INFANTIL
  SUB20
  SUB17
  SUB15
  SUB13
  FEMININO
  MASCULINO
}

model Organizador {
  id_organizador  String @id @default(uuid())
  id_usuario      String @unique
  
  Usuario         Usuario   @relation(fields: [id_usuario], references: [id_usuario],onDelete: Cascade)

  // Competicoes     Competicao[]
}


model Time {
  id_time            String   @id @default(uuid())
  id_usuario         String @unique
  nome_time          String
  categorias         Categoria[]
  modelo_uniforme    String?
  escudo             String?

  Usuario            Usuario  @relation(fields: [id_usuario], references: [id_usuario], onDelete: Cascade)
  Atletas            Atleta[]
  Treinadores        Treinador[]
  
  Estadios           Estadio[]
  DiretoriaTime      DiretoriaTime[]
  EscalacoesTime     EscalacaoTime[]
  Historico          HistoricoClubeAtleta[]
  Teste              Teste[]
  HistoricoTreinador HistoricoClubeTreinador[]
  Eventos         Evento[]
  
}

model Treinador {
  id_treinador            String @id @default(uuid())
  id_usuario              String @unique
  id_time                 String?
  cref                    String?
  categoria               Categoria[]
  historico_times         String[]
  Usuario                 Usuario   @relation(fields: [id_usuario], references: [id_usuario],onDelete: Cascade)
  Time                    Time?      @relation(fields: [id_time], references: [id_time])
  AtletaJogos             AtletaJogo[]
  HistoricoTreinador      HistoricoClubeTreinador[]
  
}

model Atleta {
  id_atleta           String @id @default(uuid())
  id_usuario          String @unique
  id_time             String?
  altura              Float?
  peso                Float?
  score               Float?
  id_empresario       String?
  caracteristicasJogo String[]
  posicoes            String[]
  Usuario             Usuario     @relation(fields: [id_usuario], references: [id_usuario],onDelete: Cascade)
  Time                Time  ?      @relation(fields: [id_time], references: [id_time])
  Empresario          Empresario ? @relation(fields: [id_empresario], references: [id_empresario])
  Eventos             Evento[]
  EscalacoesTime      EscalacaoTime[]
  AtletaJogos         AtletaJogo[]
  Historico           HistoricoClubeAtleta[]
  Lesoes              Lesoes[]
  Teste               Teste[]
  Educacao            Educacao[]
  ExamesMedico        ExameMedico[]

}

model Empresario {
  id_empresario   String @id @default(uuid())
  id_usuario      String @unique
  categoria       Categoria[]
  Usuario         Usuario     @relation(fields: [id_usuario], references: [id_usuario],onDelete: Cascade)
  Atletas         Atleta[]
}

/////////////////////// CAMPEONATO///////////////////////

model Competicao {
  id_competicao      String   @id @default(uuid())
  id_usuario         String
  nome_campeonato    String
  formato_campeonato String
  quantidade_times   String
  orgao_publico      Boolean
  data_inicio        DateTime
  data_fim           DateTime
  regulamento        String
  times_ids          String[] 
  Usuario            Usuario  @relation(fields: [id_usuario], references: [id_usuario])
  Partida              Partida[]
}

model Partida {
  id_partida         String @id @default(uuid())
  dia_jogo           DateTime
  id_estadio         String
  id_competicao      String
  sumula             String
  times_ids          String[]

  Competicao         Competicao  @relation(fields: [id_competicao], references: [id_competicao])
  Estadio            Estadio     @relation(fields: [id_estadio], references: [id_estadio])
  Arbitros           ComissaoArbitragem[]
  Eventos         Evento[]

}

model Arbitro {
  id_arbitro      String @id @default(uuid())
  nome            String
  tipo_arbitragem String
  Partidas        ComissaoArbitragem[]
}

model ComissaoArbitragem {
  id_partida      String
  id_arbitro      String
  Partida         Partida @relation(fields: [id_partida], references: [id_partida])
  Arbitro         Arbitro @relation(fields: [id_arbitro], references: [id_arbitro])

  @@id([id_partida, id_arbitro])
}

model Evento {
  id_evento       String  @id @default(uuid())
  tipo_evento     String
  minuto_jogo     Int
  id_atleta       String
  id_partida      String
  id_time         String
  Atleta          Atleta   @relation(fields: [id_atleta], references: [id_atleta])
  Partida         Partida  @relation(fields: [id_partida], references: [id_partida])
  Time            Time     @relation(fields: [id_time], references: [id_time])
}

model EscalacaoTime {
  id_escalacao  String @id @default(uuid())
  id_partida    String
  id_time       String
  id_atleta     String
  posicao       String
  formacao      String

  Time          Time     @relation(fields: [id_time], references: [id_time])
  Atleta        Atleta   @relation(fields: [id_atleta], references: [id_atleta])
}

/////////////////////// TIME ///////////////////////

model Estadio {
  id_estadio      String @id @default(uuid())
  nome            String
  cidade_endereco String
  estado_endereco String
  capacidade      Int
  tipo_gramado    String
  id_time         String
  Time            Time      @relation(fields: [id_time], references: [id_time])
  Partidas        Partida[]
}

model DiretoriaTime {
  id_diretoriaTime String @id @default(uuid())
  cargo            String
  data_inicio      DateTime
  data_final       DateTime
  id_time          String
  Time            Time      @relation(fields: [id_time], references: [id_time])
}


/////////////////////// ATLETAS ///////////////////////

model AtletaJogo{
  id_AtletaJogos   String @id @default(uuid())
  score            Float?
  id_treinador     String
  id_jogo          String
  id_atleta        String

  Atleta           Atleta       @relation(fields: [id_atleta], references: [id_atleta])
  Treinador        Treinador    @relation(fields: [id_treinador], references: [id_treinador])
}

model HistoricoClubeAtleta{
  id_historicoClube  String @id @default(uuid())
  score              Float?
  id_atleta          String
  id_time            String
  numeroCamisa       Int[]
  posicoesJogados    String[]
  premiosIndividuais Json?
  titulos            Json?
  data_inicio        DateTime
  data_final         DateTime
  Time               Time      @relation(fields: [id_time], references: [id_time])
  Atleta             Atleta    @relation(fields: [id_atleta], references: [id_atleta])
}

model Lesoes {
  id_lesoes        String @id @default(uuid())
  id_atleta        String
  tipoLesao        Int
  data_inicio      DateTime
  data_final       DateTime
  Atleta           Atleta      @relation(fields: [id_atleta], references: [id_atleta])
}

model Educacao {
  educacao_id              String @id @default(uuid())
  atleta_id                String
  ensino_medio             String
  data_inicio_ensino_medio DateTime?
  data_final_ensino_medio  DateTime?
  faculdade                String
  data_inicio_faculdade    DateTime?
  data_final_faculdade     DateTime?
  curso                    String?
  Atleta                   Atleta   @relation(fields: [atleta_id], references: [id_atleta])
}

model ExameMedico {
  exame_id      String @id @default(uuid())
  atleta_id     String
  tipo_exame    String
  Atleta        Atleta   @relation(fields: [atleta_id], references: [id_atleta])
}

model Teste {
  teste_id      String @id @default(uuid())
  time_id       String
  atleta_id     String
  resultado     String
  data_inicio   DateTime
  data_final    DateTime
  Atleta        Atleta   @relation(fields: [atleta_id], references: [id_atleta])
  Time          Time     @relation(fields: [time_id], references: [id_time])
}

/////////////////////// TREINADOR ///////////////////////
model HistoricoClubeTreinador{
  id_historicoClube  String @id @default(uuid())
  score              Float?
  id_treinador       String
  id_time            String
  premiosIndividuais Json?
  titulos            Json?
  data_inicio        DateTime
  data_final         DateTime
  Time               Time      @relation(fields: [id_time], references: [id_time])
  Treinador          Treinador    @relation(fields: [id_treinador], references: [id_treinador])
}